# Config lightdm greeter to lingmo-lightdm-greeter.
# Update background of lightdm.

# Set lightdm as default display manager.
setup_default_dm() {
  cat > /etc/X11/default-display-manager <<EOF
/usr/sbin/lightdm
EOF
}

enable_lingmo_lightdm_greeter() {
  local CONF_FILE=/etc/lightdm/lightdm.conf
  if [ -f "${CONF_FILE}" ]; then
    sed -i -r \
      -e "s|^#.*greeter-session=.*\$|greeter-session=lightdm-lingmo-greeter|" \
      -e "s|^#.*user-session=.*\$|user-session=lingmo|" \
      "${CONF_FILE}"
  fi
}

main() {
  setup_default_dm
  enable_lingmo_lightdm_greeter
}

main

return 0
